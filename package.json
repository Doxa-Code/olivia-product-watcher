{
  "name": "product-watcher",
  "version": "2.0.0",
  "scripts": {
    "dev": "bun run cli.ts",
    "build": "bun build --compile --minify cli.ts --outfile dist/watcher",
    "build:linux": "bun build --compile --minify --target=bun-linux-x64 cli.ts --outfile dist/watcher-linux-x64",
    "build:mac-arm": "bun build --compile --minify --target=bun-darwin-arm64 cli.ts --outfile dist/watcher-darwin-arm64",
    "build:mac-x64": "bun build --compile --minify --target=bun-darwin-x64 cli.ts --outfile dist/watcher-darwin-x64",
    "build:all": "bun run build:linux && bun run build:mac-arm && bun run build:mac-x64"
  },
  "dependencies": {
    "@seald-io/nedb": "^4.1.2",
    "axios": "^1.13.2",
    "mariadb": "^3.4.5",
    "mysql": "2.0.0",
    "pg": "^8.16.3",
    "prompts": "^2.4.2"
  },
  "devDependencies": {
    "@types/mysql": "^2.15.27",
    "@types/pg": "^8.16.0",
    "@types/prompts": "^2.4.9"
  }
}
